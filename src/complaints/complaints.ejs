                                <label for="image-upload" class="btn" style="width: 100%; color: white; background-color: orangered;">
									Upload the image
									<center>
									  <input type="file" id="image-upload" class="d-none" accept="image/*" onchange="handleImageUpload(this)" name="imageDenuncia" required>
									</center>
									<input type="hidden" id="image-base64" name="imageBase64">
								  </label>
								  <center><div id="image-preview"></div></center>
								  
								  <script>
									// Função para lidar com o upload de imagem, incluindo pré-visualização e conversão em base64
									function handleImageUpload(input) {
									  const fileInput = input;
									  const hiddenInput = document.getElementById("image-base64");
									  const previewContainer = document.getElementById("image-preview");
									  const addButton = document.getElementById("add-image-button");
								  
									  while (previewContainer.firstChild) {
										previewContainer.removeChild(previewContainer.firstChild);
									  }
								  
									  for (let i = 0; i < fileInput.files.length; i++) {
										const reader = new FileReader();
										const img = document.createElement("img");
										img.className = "img-thumbnail";
								  
										reader.onload = function (e) {
										  const base64Image = e.target.result;
										  //console.log(base64Image);
										  var myHiddenInput = document.getElementById('image-base64');
										  myHiddenInput.value = base64Image;
										  console.log(myHiddenInput.value);
										  hiddenInput.value = base64Image; // Define o valor do campo hidden com a imagem em base64
										  img.src = base64Image;
										  previewContainer.appendChild(img);
										};
								
										reader.readAsDataURL(fileInput.files[i]);
									  }
								  
									  addButton.classList.remove("d-none");

									  
									}
								  </script>
								  
                            
